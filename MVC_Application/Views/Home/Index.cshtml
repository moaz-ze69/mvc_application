@model MVC_Application.Models.HomeModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 90vh;
        }

        .tableClass {
            background-color: #8fa8c9;
            border-radius: 10px;
            padding: 30px;
            height: 250px;
        }

        .tableInputClass {
            height: 25px;
            border-radius: 5px;
            border: none;
            margin-left: 5px;
        }

        .buttonClass {
            background-color: white;
            margin-left: 5px;
            border-radius: 5px;
            border: none;
            height: 30px;
            width: 65px;
            cursor: pointer;
        }

        .outputContainerClass{
            display: flex;
            align-items: center;
            flex-direction: column;
        }

        .errorMessageClass {
            color: red;
        }

        .outputClass {
            width: 250px;
            display: flex;
            align-items: center;
            flex-direction: column;
            margin-top: 10px;
            border-radius: 10px;
            border: 2px solid black;
        }

    </style>
</head>
<body>
    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
    <table class="tableClass" cellpadding="0" cellspacing="0">
        <tr>
            <th colspan="2" align="center">Enter Data</th>
        </tr>
        <tr>
            <td class="tableDataClass">LowerBound: </td>
            <td>
                @Html.TextBoxFor(m => m.LowerBound, new { Class = "tableInputClass" })
            </td>
        </tr>
        <tr>
            <td class="tableDataClass">UpperBound: </td>
            <td>
                @Html.TextBoxFor(m => m.UpperBound, new { Class = "tableInputClass" })
            </td>
        </tr>

        <tr>
            <td></td>
            <td><input class="buttonClass" type="submit" value="Submit" /></td>
        </tr>
    </table>

    <div class="outputContainerClass">

        @if(@ViewBag.Lower == @ViewBag.Upper){
            <p></p>
        } else if(@ViewBag.Lower > @ViewBag.Upper){
            <p class="errorMessageClass">Lower value can't be greater than Upper value</p>
        } else{
            <div class="outputClass">
                @{
                    for (int i = @ViewBag.Lower; i <= @ViewBag.Upper; i++)
                    {
                        if (i % 3 == 0 && i % 7 == 0)
                        {
                            <p>Goldy Gopher</p>
                        }
                        else if (i % 7 == 0)
                        {
                            <p>Gopher</p>
                        }
                        else if (i % 3 == 0)
                        {
                            <p>Goldy</p>
                        }
                        else
                        {
                            <p>@i</p>
                        }
                    }
                }
            </div>
        }
    </div>
    }
</body>
</html>